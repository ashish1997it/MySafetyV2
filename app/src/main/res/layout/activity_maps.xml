<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.ashish.dev.mapv2.MapsActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/B_search"
        tools:layout="@layout/activity_maps" />

    <EditText
        android:id="@+id/TF_location"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Enter to Search Results..."
        android:inputType="textPersonName"
        tools:ignore="HardcodedText,LabelFor" />

    <Button
        android:id="@+id/B_search"
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TF_location"
        android:layout_alignBottom="@+id/TF_location"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="onClick"
        android:text="Search"
        android:textAllCaps="false"
        tools:ignore="HardcodedText,NewApi,UnusedAttribute" />

</RelativeLayout>